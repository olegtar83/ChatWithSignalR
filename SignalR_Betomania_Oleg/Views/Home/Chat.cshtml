@{
    ViewBag.Title = "Chat";
}
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/angularScripts/controllers.js"></script>
<h2>Chat</h2>

<div class="container" ng-app="myApp" ng-controller="SignalRCtrl" ng-init="init()">
    <input type="text" id="message" ng-model="message" />
    <input type="button"  ng-click="sendMessage()" id="sendmessage" value="Send" />
    <input type="radio" ng-model="chatButton"  ng-click="switch()" value="lobby" ng-true-value="lobby"  /> Lobby 
    <input type="radio" ng-model="chatButton"  ng-click="switch()"  value="family" ng-true-value="family" /> Family
    <input type="radio" ng-model="chatButton" ng-click="switch()"   value="friends" ng-true-value="friends" /> Friends
    <br/>
    <textarea readonly="readonly" ng-model="chat" id="chat" rows="5" style="width:100%"></textarea>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
